<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f1f1f1">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="?colorPrimary"
        android:layout_height="48dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:padding="8dp">

        <LinearLayout
            android:id="@+id/back"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/back_img"
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:src="@drawable/back"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="返回"
                android:textSize="17sp"
                android:gravity="center"
                android:textColor="@color/white"/>
        </LinearLayout>


        <TextView
            android:text="印记详情"
            android:layout_centerInParent="true"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                android:id="@+id/container"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">
                    <RelativeLayout
                        android:id="@+id/author_container"
                        android:layout_width="wrap_content"
                        android:layout_height="56dp">
                        <ImageView
                            android:id="@+id/avatar"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_centerVertical="true"/>
                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_toRightOf="@+id/avatar"
                            android:textSize="16sp"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="4dp"
                            tools:text="Ina"/>
                        <TextView
                            android:id="@+id/time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/avatar"
                            android:textSize="12sp"
                            android:gravity="center_vertical"
                            android:layout_below="@+id/name"
                            android:layout_marginLeft="8dp"
                            tools:text="11月7日"/>
                    </RelativeLayout>

                    <com.jude.exgridview.ExGridView
                        android:id="@+id/pictures"
                        android:layout_marginTop="@dimen/activity_margin"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:id="@+id/content"
                        android:layout_marginTop="@dimen/activity_margin"
                        android:padding="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="48dp">
                        <ImageView
                            android:id="@+id/praise"
                            android:layout_width="16dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="8dp"
                            android:src="@drawable/praise"/>
                        <TextView
                            android:id="@+id/praise_count"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_marginLeft="8dp"
                            tools:text="2"/>
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="24dp"
                            android:src="@drawable/comment"/>
                        <TextView
                            android:id="@+id/comment_count"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_marginLeft="8dp"
                            tools:text="2"/>
                        <View
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"/>
                        <ImageView
                            android:id="@+id/more"
                            android:layout_width="16dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="8dp"
                            android:src="@drawable/more"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray"/>

                    <com.jude.emotionshow.presentation.widget.LinearWrapContentRecyclerView
                        android:id="@+id/comment_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"/>
                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@color/white">
        <EditText
            android:id="@+id/reply"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:hint="对印记发表评论"
            android:padding="4dp"
            android:textSize="14sp"
            android:layout_height="wrap_content"
            android:minHeight="32dp"
            android:background="@drawable/round_line_rect"/>
        <com.jude.tagview.TAGView
            android:id="@+id/reply_send"
            android:layout_width="56dp"
            android:layout_height="32dp"
            app:tag_color="?colorPrimary"
            android:layout_marginLeft="8dp"
            app:tag_text="发送"/>


    </LinearLayout>


</LinearLayout>