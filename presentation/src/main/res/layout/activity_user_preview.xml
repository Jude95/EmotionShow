<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="@color/gray"
            />


        <com.jude.tagview.TAGView
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="94dp"
            app:tag_color="@color/white"
            app:tag_as_circle="true"/>

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="96dp"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            tools:text="Name"
            android:layout_marginTop="8dp"
            android:textColor="@color/white"
            android:layout_below="@+id/avatar"/>

        <TextView
            android:id="@+id/sign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/sign_background"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="48dp"
            tools:text="What the Fuck"
            android:gravity="center"
            android:paddingRight="64dp"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"
            android:layout_below="@+id/name"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginBottom="16dp"
            android:layout_alignParentBottom="true">
            <com.jude.tagview.TAGView
                android:id="@+id/seed_count"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                app:tag_text="6\n印记"
                app:tag_as_circle="true"
                app:tag_color="#808080"
                />
            <com.jude.tagview.TAGView
                android:id="@+id/fans_count"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                app:tag_text="6\n粉丝"
                app:tag_as_circle="true"
                app:tag_color="#808080"
                />
            <com.jude.tagview.TAGView
                android:id="@+id/praise_count"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                app:tag_text="6\n点赞"
                app:tag_as_circle="true"
                app:tag_color="#808080"
                />
        </LinearLayout>


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:padding="8dp">
        <LinearLayout
            android:id="@+id/back"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/back_img"
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:src="@drawable/back"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="返回"
                android:textSize="17sp"
                android:gravity="center"
                android:textColor="@color/white"/>
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>